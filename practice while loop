#just practice
fardin = 1
fardin2 = []
while fardin <= 40:
    if fardin % 4 == 0:
        fardin += 1
        print("skiped")
        continue
    elif fardin %3 == 0 and fardin % 5 != 0:
        print("bonus",fardin)
    elif fardin == 25:
        break
    else:
        print("add",fardin)
    fardin2.append(fardin)
    fardin += 1
print("total steps",fardin2)
print(type(fardin2))
# new 
#password checker
password = 1234
write = []
wrong = []
attempt = 0
while True:
    user = int(input("write password: "))
    if password == user:
        print("password is correct")
        write.append(user)
        break
    else:
        print("wrong password")
        attempt += 1
        wrong.append(user)
    if attempt == 5:
        print("too many attempts")
        break
#Calculator only (+ - * /)
symbol = ["+","-","*","/"]
value = 0
while True:
    user1stnumber = int(input("enter a number:"))
    usersymbol = input("enter symbol:")
    user2ndnumber = int(input("enter another number:"))
    if usersymbol == symbol[0]:
        print(user1stnumber + user2ndnumber)
        break
    if usersymbol == symbol[1]:
        print(user1stnumber - user2ndnumber)
        break
    if usersymbol == symbol[2]:
        print(user1stnumber * user2ndnumber)
        break
    if usersymbol == symbol[3]:
        print(user1stnumber / user2ndnumber )
        break
    else:
        print("wrong input")
        value += 1
    if value > 0:
        continue




print(len(write) , "your total write attempt")
print(len(wrong),"your total wrong attempt")
#anather pass checker but this time with gmail
gmial = "admin"
password = "1234"
maxattempts = 7
attempts = 0
while True:
    user = input("enter the gmail: ")
    passwroduser =input("enter the password: ")
    if user == gmial and passwroduser == password:
        print("login successful")
        break
    else:
        attempts += 1
        print(attempts, "attempt", "", "login failed")
    if attempts == maxattempts:
            print("maximum attempts reached")
            break


















